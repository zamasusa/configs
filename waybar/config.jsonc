{
  "layer": "top",
  "position": "top",
  "modules-left": [
    "custom/logo",
    "clock",
    "disk",
    "memory",
    "cpu",
    "temperature",
    "custom/gpu-temp",
    "hyprland/window",
    "privacy",
  ],
  "modules-center": ["hyprland/workspaces"],
  "modules-right": [
    "tray",
    "idle_inhibitor",
    "bluetooth",
    "group/audio",
    "group/networking",
  ],
  "reload_style_on_change": true,
  "custom/logo": {
    "format": "Û∞£á",
    "tooltip": false,
  },
  "clock": {
    "format": "{:%I:%M:%S %p}",
    "interval": 1,
    "tooltip-format": "\n<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
    "calendar-weeks-pos": "right",
    "today-format": "<span color='#7645AD'><b><u>{}</u></b></span>",
    "format-calendar": "<span color='#aeaeae'><b>{}</b></span>",
    "format-calendar-weeks": "<span color='#aeaeae'><b>W{:%V}</b></span>",
    "format-calendar-weekdays": "<span color='#aeaeae'><b>{}</b></span>",
  },
  "disk": {
    "interval": 30,
    "format": "ÔáÄ  {percentage_used}%",
    "path": "/",
  },
  "memory": {
    "format": "Ôî∏ {percentage}%",
  },
  "cpu": {
    "interval": 1,
    "format": "CPU {usage}%",
  },
  "temperature": {
    "format": "Ôãâ {temperatureC}¬∞C",
    "format-critical": "Ôãá {temperatureC}¬∞C",
    "interval": 1,
    "critical-threshold": 80,
    "thermal-zone": 1,
    "tooltip": false,
  },
  "custom/gpu-temp": {
    "exec": "nvidia-smi --query-gpu=utilization.gpu,temperature.gpu --format=csv,nounits,noheader | sed 's/\\([0-9]\\+\\), \\([0-9]\\+\\)/\\1% üå°Ô∏è \\2¬∞C/g'",
    "format": "GPU {}",
    "interval": 2,
    "tooltip": false,
  },
  "hyprland/window": {
    "format": "( {class} )",
    "tooltip": false,
  },
  "tray": {
    "icon-size": 14,
    "spacing": 10,
  },
  "idle_inhibitor": {
    "format": "<span font='12'>{icon}</span>",
    "format-icons": {
      "activated": "Û∞æ™",
      "deactivated": "Û∞Ö∂",
    },
  },
  "bluetooth": {
    "format-on": "Û∞ÇØ",
    "format-off": "Û∞Ç≤",
    "format-disabled": "Û∞Ç≤",
    "format-connected": "Û∞Ç¥",
    "format-connected-battery": "{device_battery_percentage}% Û∞Ç¥",
    "tooltip-format": "{controller_alias}\t{controller_address}\n\n{num_connections} connected",
    "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{num_connections} connected\n\n{device_enumerate}",
    "tooltip-format-enumerate-connected": "{device_alias}\t{device_address}",
    "tooltip-format-enumerate-connected-battery": "{device_alias}\t{device_address}\t{device_battery_percentage}%",
    "on-click": "~/.config/waybar/scripts/bluetooth-toggle.sh",
  },
  "network": {
    "format-wifi": "Ôá´ ",
    "format-ethernet": "Û∞àÄ",
    "format-disconnected": "Û±êÖ",
    "tooltip-format": "{ipaddr}",
    "tooltip-format-wifi": "{essid} ({signalStrength}%) Ôá´ | {ipaddr}",
    "tooltip-format-ethernet": "{ifname} üñß | {ipaddr}",
    "tooltip-format-ethernet": "{bandwidthTotalBytes}",
    "on-click": "networkmanager_dmenu",
  },
  "network#speed": {
    "format": "Û±¶≥ {bandwidthDownBytes}   Û±¶≤ {bandwidthUpBytes}",
    "interval": 1,
    "tooltip-format": "{ipaddr}",
    "tooltip-format-wifi": "{essid} ({signalStrength}%) Ôá´  \n{ipaddr} | {frequency} MHz{icon} ",
    "tooltip-format-ethernet": "{ifname} Û∞àÄ \n{ipaddr} | {frequency} MHz{icon} ",
    "tooltip-format-disconnected": "Not Connected to any type of Network",
    "tooltip": true,
  },
  "group/networking": {
    "orientation": "horizontal",
    "drawer": {
      "transition-duration": 500,
      "transition-left-to-right": false,
    },
    "modules": ["network", "network#speed"],
  },
  "mpd": {
    "format": "{stateIcon} {consumeIcon}{randomIcon}{repeatIcon}{singleIcon}{artist} - {album} - {title} ({elapsedTime:%M:%S}/{totalTime:%M:%S}) <U+F001>",
    "format-disconnected": "Disconnected <U+F001>",
    "format-stopped": "{consumeIcon}{randomIcon}{repeatIcon}{singleIcon}Stopped <U+F001>",
    "interval": 2,
    "consume-icons": {
      "on": "<U+F0C4> ",
    },
    "random-icons": {
      "off": "<span color=\"#f53c3c\"><U+F074></span> ",
      "on": "<U+F074> ",
    },
    "repeat-icons": {
      "on": "<U+F01E> ",
    },
    "single-icons": {
      "on": "<U+F01E>1 ",
    },
    "state-icons": {
      "paused": "<U+F04C>",
      "playing": "<U+F04B>",
    },
    "tooltip-format": "MPD (connected)",
    "tooltip-format-disconnected": "MPD (disconnected)",
  },
  "privacy": {
    "icon-spacing": 4,
    "icon-size": 18,
    "transition-duration": 250,
    "modules": [
      {
        "type": "screenshare",
        "tooltip": true,
        "tooltip-icon-size": 24,
      },
      {
        "type": "audio-out",
        "tooltip": true,
        "tooltip-icon-size": 24,
      },
      {
        "type": "audio-in",
        "tooltip": true,
        "tooltip-icon-size": 24,
      },
    ],
  },
}
